{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "files": ["./window.d.ts"],
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "es2015",
    "jsx": "preserve",
    "isolatedModules": true
  },
  "exclude": ["node_modules"]
}
