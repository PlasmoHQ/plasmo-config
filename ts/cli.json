{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "CLI",
  "extends": "./base.json",
  "compilerOptions": {
    "paths": {
      "~*": ["./src/*"]
    },
    "composite": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ESNext"
  }
}
